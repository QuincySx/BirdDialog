<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/bird_dialog_layout_width"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_dialog_head"
        android:layout_width="@dimen/bird_dialog_headimage_width"
        android:layout_height="@dimen/bird_dialog_headimage_height"
        android:layout_marginTop="@dimen/bird_dialog_headimage_marginTop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ico_w"/>

    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bird_dialog_content_marginLeft"
        android:layout_marginRight="@dimen/bird_dialog_content_marginRight"
        android:layout_marginTop="@dimen/bird_dialog_content_marginTop"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/bird_dialog_content_lineSpacingExtra"
        android:textColor="@color/bird_dialog_content_textColor"
        android:textSize="@dimen/bird_dialog_content_textSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_dialog_head"
        tools:text="请在终端APP打开我的二维码"/>

    <Button
        android:id="@+id/btn_dialog_confirm"
        android:layout_width="@dimen/bird_dialog_confirm_width"
        android:layout_height="@dimen/bird_dialog_confirm_height"
        android:layout_marginTop="@dimen/bird_dialog_confirm_marginTop"
        android:background="@color/bird_dialog_confirm_backgroundColor"
        android:textColor="@color/bird_dialog_confirm_textColor"
        android:textSize="@dimen/bird_dialog_confirm_textSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_content"
        tools:text="扫一扫"/>

    <TextView
        android:id="@+id/tv_dialog_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bird_dialog_cancel_marginTop"
        android:gravity="center"
        android:paddingBottom="@dimen/bird_dialog_cancel_paddingBottom"
        android:textColor="@color/bird_dialog_cancel_textColor"
        android:textSize="@dimen/bird_dialog_cancel_textSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dialog_confirm"
        tools:text="取消"/>
</android.support.constraint.ConstraintLayout>